<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/card_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvTitle"
            android:ellipsize="end"
            android:paddingLeft="@dimen/card_text_padding"
            android:paddingRight="@dimen/card_text_padding"
            android:textSize="@dimen/text_size_large"
            android:maxLines="5"
            tools:text="Maybe breaking out of prison was the easy part. After that, Richard W. Matt and David Sweat fought cold, hunger, and eventually each other before one was caught and one was killed."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.v7.widget.CardView>
